{
    "name": "Password Show",
    "description": "This extension adds a shortcut to reveal passwords in input fields.",
    "version": "1.0.1",
    "author": "Bengt Brodersen",
    "manifest_version": 3,
    "permissions":  ["scripting", "activeTab"],
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "toggle-password": {
            "suggested_key": {
                "default": "Ctrl+Period",
                "mac": "Command+Period"
            },
            "description": "Toggle Password Mask"
        }
    },
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    }
}
